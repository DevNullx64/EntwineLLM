<UserControl x:Class="EntwineLlm.AboutWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="450" Height="200"
             Background="#1E1E1E">
    <StackPanel Margin="15">
        <StackPanel Orientation="Horizontal">
            <Image Source="pack://application:,,,/EntwineLLM;component/Resources/entwine-logo.jpg" Width="100" Height="100" VerticalAlignment="Top"></Image>
            <StackPanel Orientation="Vertical">
                <Label Foreground="White" FontSize="20" FontWeight="Bold">EntwineLLM</Label>
                <Label Foreground="White" FontSize="12">LLM coding assistant extension for Visual Studio</Label>
                <Label Foreground="White" FontSize="12">Created by Emiliano Musso</Label>
                <TextBlock Margin="5">
                    <Hyperlink Foreground="Aquamarine" NavigateUri="">http://github.com/EmilianoMusso</Hyperlink>
                </TextBlock>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,28,0,0">
            <Button Width="120" Height="28" IsCancel="True">Close</Button>
        </StackPanel>
    </StackPanel>
</UserControl>
